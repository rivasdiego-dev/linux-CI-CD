doctype html
html(lang="es")
  head
    title Todo App Server
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        height: 100%;
        overflow-x: hidden;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        color: white;
        background-color: #000;
      }

      .hero {
        position: relative;
        height: 100dvh;
        width: 100%;
        background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.5)), url('/public/images/api-bg.jpg');
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 0 5rem;
        overflow: hidden;
      }

      .nav {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        padding: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        font-size: 1.5rem;
        font-weight: bold;
        color: white;
      }

      .content {
        max-width: 1200px;
        margin: 0 auto;
        width: 100%;
      }

      h1 {
        font-size: clamp(2rem, 10vw, 7rem);
        margin: 0;
        margin-bottom: 2rem;
        font-weight: 700;
        letter-spacing: -2px;
      }

      .explore {
        font-size: 1.2rem;
        letter-spacing: 4px;
        text-transform: uppercase;
        margin-bottom: 1rem;
        opacity: 0.9;
      }

      .info-container {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        margin-top: 4rem;
      }

      .info-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 2rem;
        border-radius: 8px;
        flex: 1 1 250px;
        min-width: 0; /* Prevents flex items from overflowing */
      }

      .info-card .label {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        opacity: 0.7;
        margin-bottom: 0.5rem;
      }

      .info-card .value {
        font-size: 1.1rem;
        font-weight: 500;
        word-wrap: break-word;
      }

      @media (max-width: 768px) {
        .hero {
          padding: 0 1rem;
        }
        
        .info-container {
          flex-direction: column;
          margin-top: 2rem;
        }
        
        .info-card {
          flex: 1 1 auto;
        }
        
        .nav {
          padding: 1rem;
        }
      }

  body
